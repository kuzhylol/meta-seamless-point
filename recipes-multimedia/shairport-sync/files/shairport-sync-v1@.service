[Unit]
Description=Shairport Sync - AirPlay Audio Receiver
Wants=network-online.target nqptp.service avahi.service
After=network.target network-online.target nqptp.service avahi.service sound.target

[Service]
EnvironmentFile=/tmp/v1-%I-extraopts.env
ExecStart=/usr/bin/shairport-sync-v1 "$OPTS"
Restart=always
RestartSec=1
Nice=-20

[Install]
WantedBy=multi-user.target
